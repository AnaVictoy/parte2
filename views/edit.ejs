<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My CRUD in NodeJS</title>
</head>
<body>

<h2>Editar Registros<h2>
   
        <% data.forEach(function(details) { %>
            <form action="/edit/<%= details._id %>" method ="POST">
                <input type="text" value="<%= details.id %>" name="id"/>
                <td><%= details.email %></td>
                <td><%= details.usuario %></td>
                <td><%= details.senha %></td>
                <td><a href="/edit/<%= details._id %>">Editar</a><a href="/delete/<%= details._id %>">Deletar</a></td>
            </tr>
            <% }) %>
        </tbody>
        <button><a href="/">Voltar</a></button>
</body>
</html>